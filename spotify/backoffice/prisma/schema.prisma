generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Band {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  slug        String   @unique
  description String?
  status      Status   @default(active)
  cover       String?  // ðŸ‘ˆ novo campo

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  tracks      Track[]  @relation("BandTracks")

  @@map("bands")
}


model Track {
  id                String   @id @default(uuid()) @db.Uuid
  title             String  
  slug              String   @unique
  durationInSeconds Int      @map("duration_in_seconds")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  bandId            String   @db.Uuid
  band              Band     @relation("BandTracks", fields: [bandId], references: [id], onDelete: Cascade)

  @@index([bandId])
  @@map("tracks")
}

enum Status {
  active
  inactive
}
